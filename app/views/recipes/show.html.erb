<div class= "containter">
<p id="notice"><%= notice %></p>



<h1>
  <%= @recipe.title %>
</h1>


<% if @recipe.image? %>
<%= image_tag @recipe.image.url, class: "recipe-show" %>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<h3>Ingredients</h3>
<ul>
<% for @ingredient in @recipe.ingredients %>
<li><%= @ingredient.content %></li>
<% end %>
</ul>

<h3>Steps</h3>
<ol>
<% for @step in @recipe.steps %>
<li><%= @step.direction %></li>
<% end %>
</ol>



<%= link_to 'Edit', edit_recipe_path(@recipe), class: "btn btn-dark" %> 
<%= link_to 'Back', recipes_path, class: "btn btn-dark" %>
</div>