<!DOCTYPE html>
<html>
  <head>

    <title>RecipeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #4B515D;">

  <div class="collapse navbar-collapse" id="navbarNav">

    <!--Buttons -->
    <ul class="navbar-nav">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "navbar-brand" %>
      </li>
      <li class="nav-item active">
      	<%= link_to "About", pages_about_path, class:"navbar-brand"  %>
   		</li>
      <li class="navbar-nav active" >
        <%= link_to "Add Recipe", new_recipe_path, class:"navbar-brand" %>
    </ul>
    <!--Search bar-->
    
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Recipe" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>

  <body>
    <%= yield %>
  </body>
</html>
