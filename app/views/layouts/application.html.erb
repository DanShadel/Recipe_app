<!DOCTYPE html>
<html>
  <head>

    <title>Recipies Made Easy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #4B515D;">

  <div class="collapse navbar-collapse justify content between" id="navbarNav">

    <!--Buttons -->

    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "navbar-brand" %>
      </li>
      <li class="nav-item active">
      	<%= link_to "About", pages_about_path, class:"navbar-brand"  %>
   		</li>
      <li class="navbar-nav active" >
        <%= link_to "Add Recipe", new_recipe_path, class:"navbar-brand" %>
      </li>

    </ul>



    <!--Search bar-->
    <ul class="navbar-nav">
  
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="rec" placeholder="Recipe" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
      Search
    </button>
    </form>

  
  </ul>



  <!-- Account stuff -->
  <ul class="navbar-nav ml-auto">
   
       

        <li class="nav-item dropdown">

          <a class="nav-link dropdown toggle" href="#" id ="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Account
         </a>


          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>

            <%= link_to('My Recipies', pages_userRecipes_path, class:"dropdown-item")  %>  
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class:"dropdown-item") %> 

            <%= "      Hello, #{current_user.username}"%>       

            <% else %>
       
              <%= link_to('Login', new_user_session_path, class:"dropdown-item")  %>  
      
                 <% end %>
          </div>
        </li>
     </ul>
  </div>
</nav>

  <body>
    <%= yield %>
  </body>
</html>
